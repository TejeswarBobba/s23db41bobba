extends layout

block content
  h1= title
  - var item = results
  div(class="container-fluid")
    div(class="row")
      each item in items 
        div(class="row-sm-2", class="m-1") Item #{item.costume_type}(#{item.size}) is #{item.cost}
        div(class="container-fluid")
          div(class="row m-1")
            each watch in item
              - let destination = `dispatch(\"/watch/update?id=${item._id}\")`
              div(class="row")
                div(class="col-sm-2") #{watch.Name}
                div(class="col-sm-2") #{watch.Model}
                div(class="col-sm-2") #{watch.Price}
                button.btn(class="btn-primary ml-1", onclick=destination) Update
  script.
    function dispatch(path){
      window.location.href=path
    }
